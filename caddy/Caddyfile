naturalpet.com.ar, www.naturalpet.com.ar {
    tls admin@naturalpet.com.ar
    
    # Redirect www to non-www
    @www {
        host www.naturalpet.com.ar
    }
    redir @www https://naturalpet.com.ar{uri} permanent
    
    # Reverse proxy to the app
    reverse_proxy naturalpet:80 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# DSA Business - Proxy al puerto 3000
dsabusiness.net, www.dsabusiness.net {
    tls admin@dsabusiness.net
    
    # Redirect www to non-www
    @www {
        host www.dsabusiness.net
    }
    redir @www https://dsabusiness.net{uri} permanent
    
    # Reverse proxy a DSA Business en puerto 3000
    reverse_proxy 200.58.106.198:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    encode gzip
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# Yo Soy Karina Martin - Frontend React
# HTTP en puerto 8080 (redirige a HTTPS en 443)
http://yosoykarinamartin.com:8080, http://www.yosoykarinamartin.com:8080 {
    # Redirect todo a HTTPS sin www
    redir https://yosoykarinamartin.com{uri} permanent
}

yosoykarinamartin.com, www.yosoykarinamartin.com {
    tls admin@yosoykarinamartin.com
    
    # Redirect www to non-www
    @www {
        host www.yosoykarinamartin.com
    }
    redir @www https://yosoykarinamartin.com{uri} permanent
    
    # Reverse proxy al contenedor de la aplicaci√≥n React en puerto 8080
    reverse_proxy karina-frontend:8080 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip

    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# WordPress Backend - Subdominio wp.yosoykarinamartin.com
wp.yosoykarinamartin.com {
    tls admin@yosoykarinamartin.com
    
    # Increase body size limit for file uploads (3GB)
    request_body {
        max_size 3072MB
    }
    
    # Reverse proxy a WordPress (nombre del contenedor: wordpress-app)
    reverse_proxy wordpress-app:80 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Cache static assets de WordPress
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}