naturalpet.com.ar, www.naturalpet.com.ar {
    tls admin@naturalpet.com.ar
    
    # Redirect www to non-www
    @www {
        host www.naturalpet.com.ar
    }
    redir @www https://naturalpet.com.ar{uri} permanent
    
    # Reverse proxy to the app
    reverse_proxy naturalpet:80 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Cache static assets
    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# DSA Business - Proxy al puerto 3000
dsabusiness.net, www.dsabusiness.net {
    tls admin@dsabusiness.net
    
    # Redirect www to non-www
    @www {
        host www.dsabusiness.net
    }
    redir @www https://dsabusiness.net{uri} permanent
    
    # Reverse proxy a DSA Business en puerto 3000
    reverse_proxy 200.58.106.198:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    encode gzip
    
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}


# GB Constructora - Frontend React (puerto 5173 via PM2)
garcetebenitezconstructora.com.py, www.garcetebenitezconstructora.com.py {
    tls admin@garcetebenitezconstructora.com.py

    # Redirect www to non-www
    @www {
        host www.garcetebenitezconstructora.com.py
    }
    redir @www https://garcetebenitezconstructora.com.py{uri} permanent

    # Reverse proxy al frontend React en puerto 5173
    reverse_proxy 200.58.106.198:5173 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    encode gzip

    @static {
        path *.css *.js *.png *.jpg *.jpeg *.gif *.ico *.svg *.woff *.woff2 *.ttf *.eot
    }
    header @static Cache-Control "public, max-age=31536000"

    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}

# GB Constructora - API Strapi (puerto 1337 via PM2)
api.garcetebenitezconstructora.com.py {
    tls admin@garcetebenitezconstructora.com.py

    # Reverse proxy a Strapi API en puerto 1337
    reverse_proxy 200.58.106.198:1337 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Aumentar límite para uploads de imágenes
    request_body {
        max_size 100MB
    }

    encode gzip

    header {
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
}



